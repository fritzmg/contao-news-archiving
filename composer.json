{
    "name": "fritzmg/contao-news-archiving",
    "description": "Contao extension to automatically move news entries to a different archive after a period of time - or delete them.",
    "type": "contao-bundle",
    "license": "LGPL-3.0-or-later",
    "homepage": "https://github.com/fritzmg/contao-news-archiving",
    "authors": [
        {
            "name": "Fritz Michael Gschwantner",
            "email": "fmg@inspiredminds.at",
            "role": "Developer"
        }
    ],
	"support": {
		"issues": "https://github.com/fritzmg/contao-news-archiving/issues",
		"source": "https://github.com/fritzmg/contao-news-archiving",
		"forum": "https://community.contao.org/de"
	},
	"funding": [
        {
            "type": "github",
            "url": "https://github.com/sponsors/fritzmg"
        }
    ],
    "require": {
        "php": ">=8.1",
        "contao/core-bundle": "^4.13 || ^5.0",
        "contao/news-bundle": "^4.13 || ^5.0",
        "doctrine/dbal": "^2.11 || ^3.0",
        "symfony/dependency-injection": "^4.4 || ^5.1 || ^6.0",
        "symfony/http-kernel": "^4.4 || ^5.1 || ^6.0"
    },
    "autoload": {
        "psr-4": {
            "InspiredMinds\\ContaoNewsArchiving\\": "src/"
        }
    },
    "extra": {
        "contao-manager-plugin": "InspiredMinds\\ContaoNewsArchiving\\ContaoManager\\Plugin"
    },
    "require-dev": {
        "contao/easy-coding-standard": "^6.0",
        "contao/rector": "^1.0"
    },
    "config": {
        "allow-plugins": {
            "contao-components/installer": true,
            "php-http/discovery": false,
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    }
}
